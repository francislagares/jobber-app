  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm tsx watch --env-file=.env.development.local src/app/index.ts | pino-pretty -c",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json && ts-node tools/copyAssets.ts",
    "start": "pm2 start ./build/src/app/index.js -i 5 --attach --watch | pino-pretty -c",
    "delete": "pm2 delete all",
    "stop": "pm2 stop all",
    "test:ci": "vitest run",
    "test:watch": "vitest watch --ui",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit",
    "lint": "eslint --fix",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx|json|md)\" --write"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@elastic/elasticsearch": "^8.17.0",
    "@francislagares/jobber-shared": "^1.0.5",
    "amqplib": "^0.10.5",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "elastic-apm-node": "^4.10.0",
    "email-templates": "^12.0.1",
    "express": "^4.21.2",
    "http-status-codes": "^2.3.0",
    "nodemailer": "^6.9.16",
    "pino-pretty": "^13.0.0",
    "shelljs": "^0.8.5",
    "winston": "^3.17.0"
  },
  "devDependencies": {
