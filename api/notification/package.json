{
  "name": "@jobber-app/notification",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm tsx watch src/app/index.ts | pino-pretty -c",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json && ts-node tools/copyAssets.ts",
    "start": "pm2 start ./build/src/app/index.js -i 5 --attach --watch | pino-pretty -c",
    "delete": "pm2 delete all",
    "stop": "pm2 stop all",
    "test:ci": "vitest run",
    "test:watch": "vitest watch --ui",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit",
    "lint": "eslint --fix",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx|json|md)\" --write"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@elastic/elasticsearch": "^8.13.1",
    "@francislagares/jobber-shared": "^1.0.2",
    "amqplib": "^0.10.4",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "email-templates": "^12.0.1",
    "express": "^4.19.2",
    "http-status-codes": "^2.3.0",
    "nodemailer": "^6.9.13",
    "pino-pretty": "^11.0.0",
    "shelljs": "^0.8.5",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.5",
    "@types/email-templates": "^10.0.4",
    "@types/express": "^4.17.21",
    "@types/node": "^22.0.2",
    "@types/nodemailer": "^6.4.14",
    "@types/shelljs": "^0.8.15",
    "@vitest/coverage-v8": "^2.0.5",
    "@vitest/ui": "^2.0.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.16.5",
    "typescript": "^5.4.5",
    "typescript-transform-paths": "^3.4.7",
    "vite": "^5.2.10",
    "vitest": "^2.0.5",
    "vitest-mock-extended": "^2.0.0"
  },
  "engines": {
    "node": ">=22.5.0",
    "pnpm": ">=9.6.0"
  },
