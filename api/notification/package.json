{
  "name": "@jobber-app/notification",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm tsx watch src/app/index.ts | pino-pretty -c",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json && ts-node tools/copyAssets.ts",
    "start": "pm2 start ./build/src/app/index.js -i 5 --attach --watch | pino-pretty -c",
    "delete": "pm2 delete all",
    "stop": "pm2 stop all",
    "test:ci": "vitest run",
    "test:watch": "vitest watch --ui",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit",
    "lint": "eslint --ext js,jsx,ts,tsx --fix",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx|json|md)\" --write"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@elastic/elasticsearch": "^8.12.1",
    "@francislagares/jobber-shared": "^1.0.1",
    "amqplib": "^0.10.3",
    "dotenv": "^16.4.4",
    "ejs": "^3.1.9",
    "email-templates": "^11.1.1",
    "express": "^4.18.2",
    "http-status-codes": "^2.3.0",
    "nodemailer": "^6.9.9",
    "pino-pretty": "^10.3.1",
    "shelljs": "^0.8.5",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.4",
    "@types/email-templates": "^10.0.4",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.19",
    "@types/nodemailer": "^6.4.14",
    "@types/shelljs": "^0.8.15",
    "@vitest/coverage-v8": "^1.3.0",
    "@vitest/ui": "^1.3.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.1",
    "typescript": "^5.1.3",
    "typescript-transform-paths": "^3.4.6",
    "vite": "^5.1.3",
    "vitest": "^1.3.0",
    "vitest-mock-extended": "^1.1.3"
  }
}
