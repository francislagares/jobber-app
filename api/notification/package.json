    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "elastic-apm-node": "^4.7.3",
    "email-templates": "^12.0.1",
    "express": "^4.21.0",
    "http-status-codes": "^2.3.0",
    "nodemailer": "^6.9.15",
    "pino-pretty": "^11.0.0",
    "shelljs": "^0.8.5",
    "winston": "^3.15.0"
  },
