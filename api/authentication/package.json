{
  "name": "@jobber-app/authentication",
  "version": "1.0.0",
  "description": "Authentication service for the jobber-app",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm prisma:generate && tsx watch src/app/index.ts | pino-pretty -c",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json && ts-node tools/copyAssets.ts",
    "start": "pm2 start ./build/src/app/index.js -i 5 --attach --watch | pino-pretty -c",
    "delete": "pm2 delete all",
    "stop": "pm2 stop all",
    "prisma:generate": "prisma generate",
    "test:ci": "vitest run",
    "test:watch": "vitest watch --ui",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit",
    "lint": "eslint --fix",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx|json|md)\" --write"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@elastic/elasticsearch": "^8.13.1",
    "@faker-js/faker": "^8.4.1",
    "@francislagares/jobber-shared": "^1.0.3",
    "@prisma/client": "^5.13.0",
    "amqplib": "^0.10.4",
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.2.0",
    "compression": "^1.7.4",
    "cookie-session": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "http-status-codes": "^2.3.0",
    "joi": "^17.13.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "pino-pretty": "^11.0.0",
    "prisma": "^5.13.0",
    "unique-username-generator": "^1.3.0",
    "uuid": "^9.0.1",
    "winston": "^3.13.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.5",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.4",
    "@types/cookie-session": "^2.0.49",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.21",
    "@types/hpp": "^0.2.4",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash": "^4.17.1",
    "@types/node": "^20.12.11",
    "@types/uuid": "^9.0.8",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.9",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.10.2",
    "typescript": "^5.4.5",
    "typescript-transform-paths": "^3.4.7",
    "vite": "^5.2.11",
    "vitest": "^1.6.0",
    "vitest-mock-extended": "^1.1.3"
  }
}
