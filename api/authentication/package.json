{
  "name": "@jobber-app/authentication",
  "version": "1.0.0",
  "description": "Authentication service for the jobber-app",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm prisma:generate && tsx watch --env-file=.env  src/app/index.ts | pino-pretty -c",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "pm2 start ./build/src/app/index.js -i 5 --attach --watch | pino-pretty -c",
    "delete": "pm2 delete all",
    "stop": "pm2 stop all",
    "prisma:generate": "prisma generate && prisma db push",
    "test:ci": "vitest run",
    "test:watch": "vitest watch --ui",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit",
    "lint": "eslint --fix",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx|json|md)\" --write"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@elastic/elasticsearch": "^8.15.0",
    "@faker-js/faker": "^9.0.3",
    "@francislagares/jobber-shared": "^1.0.5",
    "@prisma/client": "^5.20.0",
    "amqplib": "^0.10.4",
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.5.0",
    "compression": "^1.7.4",
    "cookie-session": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "elastic-apm-node": "^4.7.3",
    "express": "^4.21.0",
    "helmet": "^8.0.0",
    "hpp": "^0.2.3",
    "http-status-codes": "^2.3.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "pino-pretty": "^11.2.2",
    "prisma": "^5.20.0",
    "unique-username-generator": "^1.3.0",
    "uuid": "^10.0.0",
    "winston": "^3.14.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.5",
