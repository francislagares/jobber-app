{
  "name": "@jobber-app/authentication",
  "version": "1.0.0",
  "description": "Authentication service for the jobber-app",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm tsx watch src/app/index.ts | pino-pretty -c",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json && ts-node tools/copyAssets.ts",
    "start": "pm2 start ./build/src/app/index.js -i 5 --attach --watch | pino-pretty -c",
    "delete": "pm2 delete all",
    "stop": "pm2 stop all",
    "test:ci": "vitest run",
    "test:watch": "vitest watch --ui",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit",
    "lint": "eslint --ext js,jsx,ts,tsx --fix",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx|json|md)\" --write"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@elastic/elasticsearch": "^8.12.1",
    "@francislagares/jobber-shared": "^1.0.1",
    "amqplib": "^0.10.3",
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.0.1",
    "compression": "^1.7.4",
    "cookie-session": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "http-status-codes": "^2.3.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "pino-pretty": "^10.3.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.3",
    "@types/compression": "^1.7.4",
    "@types/cookie-session": "^2.0.46",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.21",
    "@types/hpp": "^0.2.4",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/node": "^20.11.19",
    "@vitest/coverage-v8": "^1.3.0",
    "@vitest/ui": "^1.3.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.1",
    "typescript": "^5.1.3",
    "typescript-transform-paths": "^3.4.6",
    "vite": "^5.1.3",
    "vitest": "^1.3.0",
    "vitest-mock-extended": "^1.1.3"
  }
}
