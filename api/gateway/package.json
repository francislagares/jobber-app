{
  "name": "@jobber-app/gateway",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm tsx watch --env-file=.env.development.local src/app/index.ts | pino-pretty -c",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "pm2 start ./build/src/app/index.js -i 5 --attach --watch | pino-pretty -c",
    "delete": "pm2 delete all",
    "stop": "pm2 stop all",
    "test:ci": "vitest run",
    "test:watch": "vitest watch --ui",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit",
    "lint": "eslint --fix",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx|json|md)\" --write"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@elastic/elasticsearch": "^8.17.0",
    "@francislagares/jobber-shared": "^1.0.5",
    "@socket.io/redis-adapter": "^8.3.0",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.5",
    "cookie-session": "^2.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "elastic-apm-node": "^4.10.0",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "hpp": "^0.2.3",
    "http-status-codes": "^2.3.0",
    "ioredis": "^5.4.2",
    "jsonwebtoken": "^9.0.2",
    "pino-pretty": "^13.0.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cookie-session": "^2.0.49",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/hpp": "^0.2.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.5",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-transform-paths": "^3.5.3",
    "vite": "^6.0.7",
    "vitest": "^2.1.8",
    "vitest-mock-extended": "^2.0.2"
  },
  "engines": {
    "node": ">=23.5.0",
    "pnpm": ">=9.15.0"
  }
}
