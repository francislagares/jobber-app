generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Buyer {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  username       String
  email          String
  profilePicture String
  country        String
  isSeller       Boolean  @default(false)
  createdAt      DateTime

  // purchasedGigs Gig?    @relation(fields: [gigId], references: [id])
  // gigId         String? @db.ObjectId

  @@index([username, email])
}

model Seller {
  id                 String           @id @default(auto()) @map("_id") @db.ObjectId
  fullName           String
  username           String           @unique
  email              String           @unique
  profilePicture     String
  description        String
  profilePublicId    String
  oneliner           String?
  country            String
  languages          Language[]
  skills             String[]
  ratingsCount       Int              @default(0)
  ratingSum          Int              @default(0)
  ratingCategories   RatingCategories
  ratingCategoriesId String
  responseTime       Int              @default(0)
  recentDelivery     DateTime?        @db.Date
  experience         Experience[]
  education          Education[]
  socialLinks        String[]
  certificates       Certificate[]
  ongoingJobs        Int              @default(0)
  completedJobs      Int              @default(0)
  cancelledJobs      Int              @default(0)
  totalEarnings      Int              @default(0)
  totalGigs          Int              @default(0)
  createdAt          DateTime         @default(now()) @db.Date

  @@index([username, email])
}

type Language {
  language String
  level    String
}

type RatingCategories {
  five  Rating
  four  Rating
  three Rating
  two   Rating
  one   Rating
}

type Rating {
  value              Int                @default(0)
  count              Int                @default(0)
  ratingCategoriesId String
  RatingCategories   RatingCategories[]
}

type Experience {
  company              String  @default("")
  title                String  @default("")
  startDate            String  @default("")
  endDate              String  @default("")
  description          String  @default("")
  currentlyWorkingHere Boolean @default(false)
}

type Education {
  country    String @default("")
  university String @default("")
  title      String @default("")
  major      String @default("")
  year       String @default("")
}

type Certificate {
  name String
  from String
  year Int
}
