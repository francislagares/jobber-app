{
  "name": "jobber-app",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "repository": "git+ssh://git@github.com:francislagares/jobber-app.git",
  "author": "Francis Lagares <francis.lagares@gmail.com>",
  "license": "ISC",
  "description": "Full Stack Application built with microservices architecture",
  "keywords": [
    "monorepo",
    "pnpm",
    "mern-monorepo"
  ],
  "scripts": {
    "type-check": "tsc --project tsconfig.json --pretty --noEmit",
    "lint": "eslint --ext js,jsx,ts,tsx --fix --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx|json|md)\" --write",
    "test:ci": "vitest run",
    "test:watch": "vitest watch --ui",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "@vitest/coverage-v8": "^1.3.0",
    "@vitest/ui": "^1.3.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.3",
    "vite": "^5.1.3",
    "vitest": "^1.3.0",
    "vitest-mock-extended": "^1.1.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "concurrently": "^8.1.0",
    "vite-tsconfig-paths": "^4.3.1"
  },
  "engines": {
    "node": ">=21.5.0",
    "npm": ">=10.4.0",
    "pnpm": ">=8.15.0"
  },
  "packageManager": "pnpm@8.15.0"
}
