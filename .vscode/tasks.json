// .vscode/tasks.json
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-authentication",
      "type": "shell",
      "command": "pnpm --filter authentication build",
      "problemMatcher": ["$tsc"],
      "group": "build"
    },

    {
      "label": "build-api-gateway",
      "type": "shell",
      "command": "pnpm --filter gateway build",
      "problemMatcher": ["$tsc"],
      "group": "build"
    },
    
    {
      "label": "build-notification",
      "type": "shell",
      "command": "pnpm --filter notification build",
      "problemMatcher": ["$tsc"],
      "group": "build"
    },

    {
      "label": "build-users",
      "type": "shell",
      "command": "pnpm --filter users build",
      "problemMatcher": ["$tsc"],
      "group": "build"
    },
  ]
}
